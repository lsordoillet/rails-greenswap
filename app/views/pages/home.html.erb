
<!-- BANNER ILLUSTRATION CONTAINER --->
<div class="banner" id="banner-homepage">

  <div class="container">
    <!-- SEARCH BAR --->
    <div id="content">

      <h1 class="home-title">Local marketplace<br>for <span class="home-title-decorator">plants</span></h1>
      <%= form_tag listings_path, method: :get do %>
      <div class="home-form search-form-control form-group input-group">
        <%= text_field_tag :query,
        params[:query],
        class: "form-control search-form",
          placeholder: "Search for plants, cuttings and seeds around you"
          %>
          <%= button_tag "", class: "fa fa-search pull-right btn btn-default search-btn", id:"search-this" %>
        </div>
        <% end %>


    </div>
  </div>

</div>

  <!-- END OF THE SEARCH BAR --->
  <!-- END OF THE BANNER ILLUSTRATION--->

  <!-- HOW IT WORK SECTION --->
  <div class="container" style="margin-bottom: 100px;">

    <h2 class="home-title text-center">
    How it works</h2>
    <span class="home-description">
    Become a GreenSwap member</span>

    <div class="cards">
      <div class="card card-homepage">
        <%= image_tag ("picture-card-home.gif") %>
        <h4>Browse all plants</h4>
        <p>Get wonderful plants from our community</p>
        <%= link_to "Browse all plants", listings_path,class: "btn-orange-card"%>
      </div>

      <div class="card card-homepage">
        <%= image_tag ("picture-card-home.gif") %>
        <h4>Swap & Review</h4>
        <p>Swap your plants with other plants lover</p>
        <%= link_to "Start Swapping", listings_path, class: "btn-orange-card"%>
      </div>

      <div class="card card-homepage">
        <%= image_tag ("picture-card-home.gif") %>
        <h4>Join the community</h4>
        <p>Become a plant master with the knowledge of our community</p>
        <%= link_to "Create a profile", new_user_registration_path, class: "btn-orange-card"%>
      </div>

    </div>
  </div>
</div>
