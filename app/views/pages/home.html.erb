
<!-- BANNER ILLUSTRATION CONTAINER --->
<div class="banner" id="banner-homepage">

  <div class="container">
    <!-- SEARCH BAR --->
    <div id="content">

      <h1 class="text-left" style="padding-left:40px; padding-bottom:10px;">Local marketplace for plants</h1>
      <%= form_tag listings_path, method: :get do %>
      <div class="search-form-control form-group input-group">
        <%= text_field_tag :query,
        params[:query],
        class: "form-control search-form",
          placeholder: "Search for plants/cuttings/seeds around you"
          %>
          <button id="search-this"type="button" class="pull-right btn btn-default search-btn">
            <i class="fa fa-search"></i>
          </button>
        </div>
        <% end %>


    </div>
  </div>

</div>

  <!-- END OF THE SEARCH BAR --->
  <!-- END OF THE BANNER ILLUSTRATION--->

  <!-- HOW IT WORK SECTION --->
  <div class="container" style="margin-bottom: 100px;">

    <h1 class="text-center" style="margin-top: 30px;">
    How it works</h1>
    <h3 class="text-center" style="margin-bottom: 30px;">
    Become a Greenswap member</h3>

    <div class="cards" id="card-homepage">
      <div class="card">
        <%= image_tag ("picture-card-home.gif") %>
        <h4>Browse all plants</h4>
        <p>Get wonderful plants from our community</p>
        <%= link_to "Browse all plants", listings_path,class: "btn-orange-card"%>
      </div>

      <div class="card" id="card-homepage">
        <%= image_tag ("picture-card-home.gif") %>
        <h4>Swap & Review</h4>
        <p>Swap your plants with other plants lover</p>
        <%= link_to "Start Swapping", listings_path, class: "btn-orange-card"%>
      </div>

      <div class="card" id="card-homepage">
        <%= image_tag ("picture-card-home.gif") %>
        <h4>Join the community</h4>
        <p>Become a plant master with the knowledge of our community</p>
        <%= link_to "Create a profile", new_user_registration_path, class: "btn-orange-card"%>
      </div>

    </div>
  </div>
</div>
