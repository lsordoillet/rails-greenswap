<%= link_to 'Back', listings_path %>
<% if @current_user == @listing.user  %>
 <%= link_to 'Edit', edit_listing_path(@listing), class: "btn-orange" %>
 <%= link_to "Delete", listing_path(@listing), method: :delete, data: { confirm: "Are you sure?" }, class: "btn-orange"%>
<% end %>

<div class="show-function">
  <div class="show-back">
<%= link_to 'Go to all listings', listings_path %>
  </div>
    <div class="show-edit-delete">
    <% if @current_user == @listing.user  %>
      <%= link_to 'Edit', edit_listing_path(@listing) %>
        <%= link_to "Delete", listing_path(@listing), method: :delete, data: { confirm: "Are you sure?" } %>
    <% end %>

  </div>
</div>
  <div class="show-cards">
    <div class="show-pic-user" style="margin-top: 30px">
            <% @listing.photos.each do |photo| %>
              <%= cl_image_tag photo.key, height: 200, width: 200, crop: :fill %>
            <% end %>
        <div class="card" id=show-user style="margin-right: 5px">
          <div class="user-avatar-usern">
            <div class="show-avatar">
            <% if @listing.user.avatar.attached? %>
               <%= cl_image_tag @listing.user.avatar.key, :width=>100, :height=>100, :gravity=>"faces", :crop=>"fill" %>
             <% else %>
               <%= image_tag "placeholder.png", alt: "placeholder-img", :width=>100, :height=>100 %>
              <% end %>
              </div>
                <div class="show-username">
            <h6><%= @listing.user.username %></h6>
          </div>
              </div>
              <div class="show-user-des">
            <p><%= @listing.user.description %></p>

              </div>
              <%if @current_user == @listing.user %> <!-- If it's your listing. TODO: Edit Listing button twice now? --> 
                <%= link_to 'Edit Listing', edit_listing_path(@listing), class: "btn-orange" %> 
              <%elsif @current_user != @listing.user %> <!-- If it's not your listing and you havent requested it yet -->
                <%= link_to 'Request Listing', listing_chatrooms_path(@listing), method: :post, class: "btn-orange" %>
              <%elsif @chatroom && @current_user != @listing.user && chatroom.user == @current_user %> <!-- If the listing doesnt belong to you and you already requested the listing -->
                <%= link_to 'Go to request', chatroom_path(@chatroom), class: "btn-orange" %>
              <% end %>
        </div>
    </div>
  <div class="cards" style="margin-top: 30px">
        <div class="card w-75" id="show-card" style="margin-right: 50px; background-color: white;">
          <div class="show-header">
        <h4><%= @listing.title %></h4>
        <div class="price-zipcode">
        <div class="show-price">
        <h5>Type</h5>
        <p>
          <% if@listing.listing_type == "Sell" %>
         <%= @listing.price %>â‚¬
          <% else %>
          <%= @listing.listing_type %>
          <% end %>
         </p>
         </div>
         <div class="show-zip-code">
         <h5>ZipCode</h5>
         <p><%= @listing.postcode %></p>
       </div>

       </div>
        <p> <%= @listing.description %></p>
      </div>
      </div>
    </div>
 </div>











