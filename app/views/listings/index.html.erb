<div class="container">
  <div class="flex-container">
   <% @listings.each do |listing| %>
   <div class="card card-plant" style="width: 18rem;">
    <div class="row justify-content-center">
      <% if !listing.photos.first.nil?%>
      <%= cl_image_tag listing.photos.first.key, height: 200, width: 300, crop: :fill %>
      <% else %>
      <%= image_tag "placeholder.png", alt: "placeholder-img", height: 200, width: 300 %>
      <% end %>
    <% end %>
    </div>
   </div>
  </div>

<div class="col-xs-12 col-sm-8">
 <div id="listings">
   <% @listings.each do |listing| %>
     <button class="btn-primary">
       <%= listing.plant_category_list %>
     </button>
     <button class="btn-danger">
       <%= listing.listing_type_list %>
     </button>
     <button class="btn-danger">
       <%= listing.care_level_category_list %>
     </button>
   <% end %>
 </div>
</div>
</div>