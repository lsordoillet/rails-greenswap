<h1><%= content_for(:title, "LOCAL GOODIES") %></h1>

<!------------------ CARDS CONTAINER ------------------->

<div class="container">




  <div class="cards">
   <% @listings.each do |listing| %>
    <div class="card" style="width: 16rem;">
      <% if !listing.photos.first.nil?%>
      <%= cl_image_tag listing.photos.first.key, :width=>250, :height=>250, :gravity=>"faces", :crop=>"fill" %>
      <% else %>
      <%= image_tag "placeholder.png", alt: "placeholder-img", height: 200, width: 400 %>
      <% end %>
      <div class="card-plant-infos">
      <h4 class="card-plant-infos"><%= listing.title %></h4>
    </div>
    <div>
      <div class="flex-container-grid">
        <p><%= listing.plant_category %></p>
        <p class="card-plant-pricing"><%= listing.listing_type %></p>
      </div>
    </div>
    </div>

    <% end %>
    </div>
</div>
<!------------------ END OF CARD CONTAINER ------------------->


