<!------------------ CARDS CONTAINER ------------------->

<div class="container">




  <div class="cards">

   <% @listings.each do |listing| %>
   <%= link_to listing_path(listing) do %>
    <div class="card" id="index-card">
    <% if !listing.photos.first.nil?%>
     <%= cl_image_tag listing.photos.first.key, :width=>300, :height=>170, :gravity=>"faces", :crop=>"fill" %>
     <% else %>
     <%= image_tag "placeholder.png", alt: "placeholder-img", height: 170, width: 300 %>
     <% end %>
     <div class="card-listing-infos">
       <h4 class="card-listing-infos"><%= listing.title %></h4>
     </div>
     <div>
       <div class="flex-container-grid">
        <p><b>Category:</b>  <%= listing.plant_category %></p>
        <p><b>Type:  </b><%= listing.listing_type %></p>
        <p><b>Care Level: </b><%= listing.care_level_category %></p>
       </div>
     </div>
   </div>
  <% end %>
<% end %>


</div>
</div>
<!------------------ END OF CARD CONTAINER ------------------->


