<!-- <h1><%= content_for(:title, "LOCAL GOODIES") %></h1> -->

<div class="flex-container">

<!----------------- FILTERING BOX ------------->
  <div class="filter">
  <!-- <h3> Filter: </h3> -->
  <%= simple_form_for :search, url: listings_path, method: "GET" do |f| %>
  <div class="category">
   <p id="category-name"> Plant Category </p>
   <div class="advancedsearch">
    <%= f.collection_check_boxes :plant_category, Listing::PLANT_CATEGORY , :to_s, :to_s %>
   </div>
  </div>
  <div class="category">
   <p id="category-name"> Listing Type </p>
   <div class="advancedsearch">
    <%= f.collection_check_boxes :listing_type, Listing::LISTING_TYPE , :to_s, :to_s %>
   </div>
  </div>
  <div class="category">
    <p id="category-name"> Care Level </p>
   <div class="advancedsearch">
    <%= f.collection_check_boxes :care_level_category, Listing::CARE_LEVEL_CATEGORY , :to_s, :to_s %>
   </div>
  </div>
  <div class="flex-container">
   <%= f.submit "Apply", class: "btn-orange-filter1", style: "margin-left: 30px;" %>
   <%= link_to 'Reset', listings_path, class: "btn-orange-filter2" %>
  </div>
   <% end %>
   </div>


   <!----------------- END OF FILTERING BOX ------------->

    <!--------------  CARDS ------------->

  <div class="cards" id="cards-index">
   <% @listings.each do |listing| %>
   <%= link_to listing_path(listing) do %>
    <div class="card" id="index-card">
    <% if !listing.photos.first.nil?%>
     <%= cl_image_tag listing.photos.first.key, :width=>300, :height=>170, :gravity=>"faces", :crop=>"fill" %>
     <% else %>
     <%= image_tag "placeholder.png", alt: "placeholder-img", height: 170, width: 300 %>
     <% end %>
     <div class="card-listing-infos">
       <h4 class="card-listing-infos" style="margin-bottom: 0px;"><%= listing.title %></h4>
        <p class="text-center" style="margin-bottom: 10px;"> <b> <%= listing.plant_category %>  -   <%= listing.listing_type %></b></p>
     </div>
     <div>
       <div class="flex-container-grid">

        <p><b>Care Level: </b><%= listing.care_level_category %></p>

        <p><b>Location: </b><%= listing.postcode %> - <%= listing.city %></p>
       </div>
     </div>
    </div>
   <% end %>
  <% end %>
 </div>


    <!--------------  END OF CARDS ------------->
</div>
