
    <%= simple_form_for(@listing) do |f| %>
      <%= f.input :title %>
      <%= f.input :postcode %>
      <%= f.input :city %>
      <%= f.input :description %>
      <%= f.input :active, as: :boolean, boolean_style: :inline %>
      <%= f.input :quantity %>
      <%= f.input :price %>
      <%= f.input :plant_category, collection: Listing::PLANT_CATEGORY %>
      <%= f.input :listing_type, collection: Listing::LISTING_TYPE %>
      <%= f.input :care_level_category, collection: Listing::CARE_LEVEL_CATEGORY %>
      <%= f.input :photos, as: :file, input_html: { multiple: true } %>
      <%= f.submit "Edit", class: "btn-orange" %>
      <%= link_to 'Cancel', listings_path, class: "btn-orange" %>
    <% end %>

